
  <%- include("partials/header"); -%>
  <body>    
    <h2 id="search-results-h2">Search Results...</h2>
    <div class="results-page-container">
    <div class="search-result-div">
      <div class="row row-cols-1 row-cols-md-2 g-4">

      <% searchResults.forEach(function(result){ %>
        
        <div class="card bg-light" style="width: 15rem;">
        <img src="<%=result.albumImageUrl || result.artistImageUrl%>" class="card-img-top">
        
        <div class="card-body">
          
          <h5 class="card-title"><%=result.trackName%></h5>
          
          <p class="card-text"> <%=result.albumName%>, <br> 
            <%=result.artistName%></p>
          <div class="button-container">
            <% if (artistPage !== true) { %>
              <a href="/album/<%=result.albumUri%>" class="play-button btn btn-success" id="card-button">Play Online</a>
            <% } %> 
            <a href="/artist/<%=result.artistId%>" class="play-button btn btn-success" id="card-button">Go to Artist</a>
          </div>
        </div>
        
      </div>
      <% }); %>
    </div>
  </div>
  </body>
</html>