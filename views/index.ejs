  <div class="hero-div">
  <h1 id="main-header">Spotify Search</h1>
  <p>Search for your and play your favourite song using Spotify API</p>
    <form action="/index" method="post">
      <input id="user-search-querie" type="text" name="searchName" class="form-text input-box form-control-lg">
      <div class="dropdown">
        <select class="selectpicker" data-style="btn-info" name="selectpicker">
          <optgroup label="Select Table">
              <option value="track">Search type</option>
              <option value="track">Track</option>
              <option value="album">Album</option>
              <option value="artist">Artist</option>
          </optgroup>
      </select>
      <br>
      <button type="submit" id="search-button" class="btn btn-lg btn-secondary fw-bold border-white bg-white">Search</button>
    </form>
    <img id="logo" src="" alt="">
  </main>
